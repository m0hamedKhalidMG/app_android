<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".SignUpActivity"
    android:id="@+id/rootLayout">


<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivSignUpLogo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ejary3" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvSignUpTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Create Your Account"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Full Name Input -->
            <AutoCompleteTextView
                android:id="@+id/atvFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rect"
                android:drawableStart="@drawable/icon_person"
                android:drawablePadding="12dp"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <!-- Email Input -->
            <AutoCompleteTextView
                android:id="@+id/atvEmailSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rect"
                android:drawableStart="@drawable/icon_mail"
                android:drawablePadding="12dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <!-- Phone Number Input -->
            <AutoCompleteTextView
                android:id="@+id/atvPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rect"
                android:drawableStart="@drawable/baseline_phone_24"
                android:drawablePadding="12dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <!-- Password Input -->
            <AutoCompleteTextView
                android:id="@+id/atvPasswordSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rect"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <!-- Confirm Password Input -->
            <AutoCompleteTextView
                android:id="@+id/atvConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_rect"
                android:drawableStart="@drawable/icon_password"
                android:drawablePadding="12dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:textSize="16sp" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#4CAF50"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

            <!-- Google Sign Up Button -->
            <Button
                android:id="@+id/button_with_icon_google"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#4285F4"
            android:drawableLeft="@drawable/g"
            android:drawablePadding="12dp"
            android:padding="12dp"
            android:text="Sign Up with Google"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

            <!-- Redirect to Sign In -->
            <TextView
                android:id="@+id/tvRedirectSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="Already have an account? Sign In"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
